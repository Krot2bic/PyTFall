{
  "$schema": "http://json-schema.org/draft-04/schema",
  "additionalProperties": false,
  "properties": {
    "add_be_spells": { "items": { "$ref": "#/definitions/magic" }, "type": "array" },
    "addeffects": { "items": { "$ref": "#/definitions/traits" }, "type": "array" },
    "addtraits": { "items": { "$ref": "#/definitions/traits" }, "type": "array" },
    "attacks": { "items": { "$ref": "#/definitions/attack" }, "type": "array" },
    "badness": { "type": "number", "min": 0, "max": 100},
    "badtraits": { "items": {"$ref": "#/definitions/traits" }, "type": "array" },
    "cblock": { "type": "number" },
    "ceffect": { "enum": [
        "allchars",
        "alllocal",
        "freelocal",
        "slavelocal"
    ], "type": "string" },
    "ch_multiplier": { "type": "number" },
    "chance": { "type": "number" },
    "ctemp": { "type": "number" },
    "damage_multiplier": { "type": "number" },
    "defence_bonus": { "$ref": "#/definitions/defenceValue" },
    "defence_multiplier": { "$ref": "#/definitions/defenceValue" },
    "delivery_bonus": { "$ref": "#/definitions/defenceValue" },
    "delivery_multiplier": { "$ref": "#/definitions/defenceValue" },
    "desc": { "type": "string" },
    "dismod": { "type": "number" },
    "eqchance": { "type": "number" },
    "evasion_bonus": { "type": "number" },
    "goodtraits": { "items": {"$ref": "#/definitions/traits" }, "type": "array" },
    "hidden": { "type": "boolean" },
    "icon": { "type": "string" },
    "id": { "type": "string" },
    "infinite": { "type": "boolean" },
    "jump_to_label": { "type": "string" },
    "locations": { "items": { "$ref": "#/definitions/locations" }, "type": "array" },
    "max": { "$ref": "#/definitions/statValue" },
    "mdestruct": { "type": "boolean" },
    "min": { "$ref": "#/definitions/statValue" },
    "mod": { "$ref": "#/definitions/statValue" },
    "mod_skills": {
      "allOf": [
        { "$ref": "#/definitions/skillObject" },
        { "$ref": "#/definitions/objectWithNumArrayOf5" }
      ]
    },
    "mreusable": { "type": "boolean" },
    "mtemp": { "type": "number" },
    "price": { "type": "number" },
    "removeeffects": { "items": { "$ref": "#/definitions/effects" },  "type": "array" },
    "removetraits": { "items": { "$ref": "#/definitions/traits" },  "type": "array" },
    "sex": { "enum": ["male", "female", "unisex"] },
    "skillmax": { "type": "number" },
    "slot": { "enum": ["body", "wrist", "weapon", "smallweapon", "resources",
        "ring", "misc", "loot", "head", "feet", "consumable", "cape", "amulet"] },
    "statmax": { "type": "number" },
    "type": { "enum": [
        "alcohol",
        "armor",
        "axe",
        "bait",
        "bow",
        "building",
        "claws",
        "crossbow",
        "dagger",
        "dress",
        "fish",
        "fish?",
        "fists",
        "food",
        "other",
        "permanent",
        "restore",
        "rod",
        "scroll",
        "scythe",
        "shield",
        "special",
        "sword",
        "throwing",
        "tool",
        "treasure",
        "upgrade",
        "whip"
    ], "type": "string" }
  },
  "required": [
    "chance",
    "icon",
    "id",
    "price",
    "slot",
    "desc"
  ],
  "type": "object"
}
